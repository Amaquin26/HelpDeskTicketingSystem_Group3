@model ASI.Basecode.Services.ServiceModels.FeedbackViewModel
@{
    ViewData["Title"] = "Edit Feedback";
}
<div class="content p-4" style="margin-left: 200px;">
    <h3>Edit Feedback</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="FeedbackId" />
        <input type="hidden" asp-for="TicketId" />
        <div class="form-group mb-3">
            <label asp-for="TicketTitle">Ticket Title</label>
            <input asp-for="TicketTitle" class="form-control" readonly />
            <span asp-validation-for="TicketTitle" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Comment"></label>
            <textarea asp-for="Comment" class="form-control" required></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" type="number" min="1" max="5" class="form-control" required />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>