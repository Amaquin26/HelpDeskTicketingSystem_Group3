@model ASI.Basecode.Services.ServiceModels.FeedbackViewModel
@{
    ViewData["Title"] = "Edit Feedback";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container content">
    <h3>Edit Feedback</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="FeedbackId" />
        <input type="hidden" asp-for="TicketId" />

        <div class="form-group mb-3">
            <label asp-for="TicketTitle" class="form-label">Ticket Title</label>
            <input asp-for="TicketTitle" class="form-control" readonly />
            <span asp-validation-for="TicketTitle" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>
            <textarea asp-for="Comment" class="form-control" required></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Rating" class="form-label">Rating</label>
            <input asp-for="Rating" type="number" min="1" max="5" class="form-control" required />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn d-block btn-danger">Update</button>
            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // You can add any additional JavaScript/jQuery here if needed
        });
    </script>
}
