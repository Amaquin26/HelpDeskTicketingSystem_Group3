@model ASI.Basecode.Services.ServiceModels.FeedbackViewModel
@{
    ViewData["Title"] = "Create Feedback";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container content">
    <h3>Create Feedback</h3>
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="TicketId" class="form-label">Select Ticket</label>
            <select asp-for="TicketId" class="form-select" id="ticketId" asp-items="@(new SelectList(Model.Tickets, "TicketId", "Title"))">
                <option value="" disabled>Select Ticket</option> <!-- Optional default option -->
            </select>
            <span asp-validation-for="TicketId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>
            <textarea asp-for="Comment" class="form-control" required></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Rating" class="form-label">Rating</label>
            <input asp-for="Rating" type="number" min="1" max="5" class="form-control" required />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn d-block btn-danger">Submit Feedback</button>
            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
        </div>
    </form>
</div>
