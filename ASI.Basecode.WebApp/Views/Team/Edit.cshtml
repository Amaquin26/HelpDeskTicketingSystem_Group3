@model ASI.Basecode.Services.ServiceModels.TeamViewModel
@{
    ViewData["Title"] = "Edit Team";
}

<div class="content p-4" style="margin-left: 200px;">
    <h3 class="mb-4"><strong>Edit Team</strong></h3>

    <form asp-action="Edit" method="post">
        <input type="hidden" name="TeamId" value="@Model.TeamId" />

        <div class="form-group">
            <label for="TeamName">Team Name</label>
            <input type="text" class="form-control" id="TeamName" name="TeamName" value="@Model.TeamName" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="TeamLeaderId" class="form-label">Team Leader</label>
            <select asp-for="TeamLeaderId" class="form-select" id="teamLeader" asp-items="@(new SelectList(ViewBag.TeamLeaders, "UserId", "Name"))">
                <option value="">-- Select Team Leader --</option> <!-- Optional default option -->
            </select>
            <span asp-validation-for="TeamLeaderId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TeamSpecialization">Team Specialization</label>
            <input type="text" class="form-control" id="TeamSpecialization" name="TeamSpecialization" value="@Model.TeamSpecialization" required />
        </div>
        <button type="submit" class="btn btn-success mt-3">Update Team</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
