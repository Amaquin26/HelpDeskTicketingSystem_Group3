@model ASI.Basecode.Services.ServiceModels.TeamViewModel
@{
    ViewData["Title"] = "Edit Team";
}

<div class="content p-4" style="margin-left: 200px;">
    <h3 class="mb-4"><strong>Edit Team</strong></h3>

    <form asp-action="Edit" method="post">
        <input type="hidden" name="TeamId" value="@Model.TeamId" />

        <div class="mb-3">
            <label for="TeamName">Team Name</label>
            <input type="text" class="form-control" id="TeamName" name="TeamName" value="@Model.TeamName" placeholder="Enter team name" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="TeamLeaderId" class="form-label">Team Leader</label>
            <select asp-for="TeamLeaderId" class="form-select" id="teamLeader" asp-items="ViewBag.TeamLeaders">
                <option value="@null">Select Leader</option> <!-- Optional default option -->
            </select>
            <span asp-validation-for="TeamLeaderId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="TeamSpecialization">Team Specialization</label>
            <input type="text" class="form-control" id="TeamSpecialization" name="TeamSpecialization" placeholder="Enter team specialization" value="@Model.TeamSpecialization" required />
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn d-block btn-danger">Update Team</button>
            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
        </div>
    </form>
</div>
