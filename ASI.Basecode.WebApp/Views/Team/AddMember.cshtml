@model ASI.Basecode.Services.ServiceModels.AddTeamMemberViewModel
@{
    ViewData["Title"] = "Add Team Member";
}
<div class="content p-4" style="margin-left: 200px;">
    <h3 class="mb-4"><strong>Add New Team Member</strong></h3>

    <form asp-action="AddMember" method="post">
        <input type="hidden" asp-for="TeamId" value="@ViewBag.TeamId" />
        <div class="form-group mb-3">
            <label asp-for="UserId" class="form-label">Agent</label>
            <select asp-for="UserId" required class="form-select" id="teamMember" asp-items="ViewBag.Agents">
                <option value="@null">Select Agent</option> <!-- Optional default option -->
            </select>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn d-block btn-success">Add Member Team</button>
            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
        </div>
    </form>
</div>
