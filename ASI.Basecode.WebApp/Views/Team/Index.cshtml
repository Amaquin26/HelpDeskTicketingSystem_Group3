@model IEnumerable<ASI.Basecode.Services.ServiceModels.TeamViewModel>

@{
    ViewData["Title"] = "Team Management";
}

<div class="content p-4" style="margin-left: 200px;">
    <h3 class="mb-4"><strong>Team Management</strong></h3>

    <a class="btn btn-danger mb-3" asp-action="Create" id="button-addon2">
        <i class="fas fa-plus"></i>
        Add Team
    </a>

    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search Team" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-outline-danger" type="button" id="button-addon2">Search</button>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Team Name</th>
                    <th scope="col">Team Leader</th>
                    <th scope="col">Specialization</th>
                    <th class="action-column">Actions</th>
                </tr>
            </thead>
            <tbody id="userItems">
                @foreach (var team in Model)
                {
                    <tr>
                        <td class="text-capitalize">@team.TeamName</td>
                        <td class="text-lowercase">@team.TeamLeaderName</td>
                        <td>@team.TeamSpecialization</td>
                        <td class="text-center">
                            <a asp-action="TeamDetails" asp-route-id="@team.TeamId" class="edit btn btn-outline-primary btn-sm text-center"><i class="fas fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@team.TeamId" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm delete-btn" data-bs-toggle="modal" data-bs-target="#deleteTeamModal-@team.TeamId">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Delete User Modal -->
    @foreach (var team in Model)
    {
        <div class="modal fade" id="deleteTeamModal-@team.TeamId" tabindex="-1" aria-labelledby="deleteTeamModal-@team.TeamId" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteTeamModalLabel">Delete Team</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this user?</p>
                        <p><strong>Team Name: </strong>@team.TeamName</p>
                        <p><strong>Team Leader: </strong>@team.TeamLeaderName</p>
                        <form asp-action="Delete" asp-controller="Team" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="TeamId" value="@team.TeamId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>
